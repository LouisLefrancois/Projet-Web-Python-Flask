{% extends "socle/base.jinja" %} 

{% block extra_styles %}
    <link rel="stylesheet" href="{{ url_for('static', filename='styles_detail.css') }}">
{% endblock extra_styles %}

{% block content %}
<div class="container">
    <h1>Détails du film</h1>
    <a href="../">Retour à la page des films</a>

    <img src="{{ url_for('static', filename='images/' + film.image) }}">
    <h2>{{ film.titre }}</h2>
    <div class="film-details">
        <p>{{ film.description }}</p>
        <p>Année : {{ film.annee }}</p>
        <p>Acteurs : {{ film.acteurs }}</p>
        <p>Réalisateur / Producteur : {{ film.realisation }}</p>
        <p class="nbFaces">Nombre de visages détectés : {{ film.num_faces }}</p>
    </div>

    <a href="{{ url_for('update_film', film_id=film.id) }}">Modifier</a>
    <form action="{{ url_for('delete_film', film_id=film.id) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce film ?');">
        <button type="submit">Supprimer</button>
    </form>
</div>
{% endblock content %}
